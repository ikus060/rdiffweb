include LICENSE
include README.md
include MANIFEST.in
include rdw.conf
include babel.cfg

# Include templates
recursive-include rdiffweb/templates *

# Include static Web files
recursive-include extras *

# Include static Web files
recursive-include rdiffweb/static *

# Include translation file
recursive-include rdiffweb/locales *.po *.pot *.mo

# Exclude gitignore
exclude .gitignore

# Exclude gitlab CICD from source
exclude .gitlab-ci.yml

# Exclude "debian" folder
prune debian

# Exclude Dockerfile
exclude Dockerfile .dockerignore

# Exclude sonarqube CICD config
exclude sonar-project.properties
