#!/bin/sh

set -e

if ! getent group rdiffweb >/dev/null; then
    echo "Adding group rdiffweb"
    addgroup --quiet rdiffweb
fi

if ! getent passwd rdiffweb >/dev/null; then
    echo "Adding user rdiffweb"
    adduser --system --no-create-home --disabled-password --ingroup rdiffweb rdiffweb
fi

exit 0
